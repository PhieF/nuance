<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="colorPrimary">#ffffff</item>
    </style>
    <!-- Base application theme. -->
    <style name="MyActionBar" parent="Theme.AppCompat.Light.DarkActionBar">


        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleTextStyle</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTitleTextStyle</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTitleTextStyle</item>
        <item name="titleTextStyle">@style/MyActionBarTitleTextStyle</item>
        <item name="android:actionBarWidgetTheme">@style/MyActionBarWidgetTheme</item>
        <item name="actionBarWidgetTheme">@style/MyActionBarWidgetTheme</item>


    </style>

    <style name="OverFlow">
        <item name="android:src">@drawable/dots</item>
        <item name="android:padding">15dip</item>
    </style>
    <style name="MyActionBarStyle"  parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@null</item>
        <item name="background">@null</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleTextStyle</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/MyActionBarTitleTextStyle</item>

    </style>
    <style name="MyActionBarTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">#ffbbbbbb</item>
    </style>

    <style name="MyActionBarWidgetTheme" parent="@android:style/Theme.Holo">
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:textColor">#ffbbbbbb</item>

        <item name="android:shadowRadius">2</item>
    </style>
</resources>
